pipeline {
    agent any

    tools {
        nodejs 'NodeJS 16' // Ensure Node.js is installed in Jenkins
    }

    stages {
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
    }
}